# Port the Express API listens on (default is 3000 if not set).
PORT=

# MongoDB connection string for the app and worker.
# Example (local): mongodb://localhost:27017/async_csv
# Example (docker): mongodb://mongo:27017/async_csv
MONGO_URI=

# Redis hostname used by BullMQ (e.g., localhost for local dev, redis for Docker).
REDIS_HOST=

# Redis port used by BullMQ (default is 6379).
REDIS_PORT=
